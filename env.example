# MedAura AI Environment Configuration
# Copy this file to .env or apikey.env and fill in your values

# ============================================================================
# REQUIRED: Google Gemini API Configuration
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ============================================================================
# OPTIONAL: Agent-Specific API Keys
# ============================================================================
# If not provided, agents will fall back to GOOGLE_API_KEY
# Use separate keys for rate limiting or billing purposes

INTERNIST_API_KEY=
NEUROLOGIST_API_KEY=
CARDIOLOGIST_API_KEY=
GASTROENTEROLOGIST_API_KEY=
PSYCHIATRIST_API_KEY=
MULTIDISCIPLINARYTEAM_API_KEY=

# ============================================================================
# OPTIONAL: Server Configuration
# ============================================================================
# Backend server port (default: 8000)
BACKEND_PORT=8000

# Frontend development server port (default: 5173)
FRONTEND_PORT=5173

# CORS allowed origins (comma-separated, default: localhost origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# OPTIONAL: Production Settings
# ============================================================================
# Set to 'production' for production deployment
NODE_ENV=development

# Enable debug logging (set to 'true' for development)
DEBUG=false

# ============================================================================
# Docker Compose Overrides
# ============================================================================
# COMPOSE_PROJECT_NAME=medaura-ai
